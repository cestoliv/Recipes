		"eta": "^1.12.3",
		"marmiton-api": "^2.3.0",
		"node-html-parser": "^6.1.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0"
	},
